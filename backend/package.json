    "tsconfig-paths": "^3.8.0",
    "tslib": "^1.10.0",
    "tspath": "^1.3.7",
    "typedoc": "^0.14.2",
    "typedoc-plugin-markdown": "^2.0.6",
    "typescript": "^3.5.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
