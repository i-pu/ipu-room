    "pug": "^2.0.3",
    "socket.io": "^2.2.0",
    "ts-node": "^8.3.0",
    "typescript-compiler": "^1.4.1-2",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/register": "^7.4.4",
    "@types/jest": "^24.0.15",
    "@types/micro": "^7.3.3",
    "@types/microrouter": "^3.1.0",
